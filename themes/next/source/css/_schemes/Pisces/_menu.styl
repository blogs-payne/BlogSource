.site-nav-toggle, .site-nav-right {
  +tablet() {
    flex-column();
  }

  .toggle {
    color: white;

    .toggle-line {
      background: white;
    }
  }
}

.site-nav {
  margin: 0 auto;
  width: $content-desktop;

  +desktop() {
    width: 100%;
    background-color: $black-customize;
  }

  +tablet() {
    display: none;
  }
}

.menu {
  +desktop() {
    overflow: hidden;
    padding: 0;
    margin: 0 auto;
    width: $content-desktop-large;
    background-color: $black-customize;
  }

  +desktop-largest() {
    width: $content-desktop-largest;
  }
}

.menu .menu-item {
  display: block;
  margin: 0;

  +desktop() {
    float: left;
    width: auto;
    height: 52px;
    a {
      height: 52px;
      line-height: 40px;
      font-size: 16px;
      color: white;
      font-weight: 200;
    }
    &:hover {
      background-color: $red-customize;
    }
    &.menu-item-active {
      a {
        background-color: $red-customize;
      }
    }
  }

  a, span.exturl {
    padding: 0px 20px;
    line-height: 52px;
    position: relative;
    text-align: left;
    transition-property: background-color;

    &:hover {
      background-color: $red-customize;
    }
  }

  &.menu-item-search {
    float: right;
  }

  +tablet-mobile() {
    &.menu-item-search {
      display: none;
    }
  }

  .badge {
    background: $grey-light;
    border-radius: 10px;
    color: white;
    float: right;
    padding: 2px 5px;
    text-shadow: 1px 1px 0 rgba(0, 0, 0, .1);
    vertical-align: middle;
  }
}

