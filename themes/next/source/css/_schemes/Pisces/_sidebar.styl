.sidebar {
  background: var(--body-bg-color);
  box-shadow: none;
  margin-top: 15px;
  position: static;
  width: $sidebar-desktop;

  +tablet-mobile() {
    display: none;
  }
}

.sidebar-panel {
  background: var(--content-bg-color);
  padding: 15px;
  margin-bottom: 15px;

  .name {
    height: 35px;
    border-bottom: 1px solid $green-customize;
    font-size: 16px;
    line-height: 35px;
    margin: 0 0 15px 0;
    font-weight: normal;
    text-align: left;
  }

  .content {
    padding-top: 0;
  }
}

.sidebar-panel.sidebar-panel-image {
  padding: 0;
}

.sidebar-panel.sidebar-panel-tags {
  .content {
    padding-top: 0;

    a {
      float: left;
      width: 49%;
      border-bottom: none;
      height: 32px;
      color: white;
      line-height: 32px;
      margin-bottom: 7px;
      font-size: 13px !important;
    }

    a:nth-of-type(2n+1) {
      margin-right: 1%;
    }

    a:nth-of-type(2n) {
      margin-left: 1%;
    }
  }
}

.sidebar-panel.sidebar-panel-categories {
  display: nav-down;

  .category-list {
    list-style: none;
    padding-left: 0;
    overflow: hidden;
    margin-top: 5px;

    .category-list-item {
      list-style: none;
      text-align: center;
      width: 48%;
      float: left;
      height: 45px;
      line-height: 45px;
      border-bottom: 1px solid $gainsboro;

      .category-list-link {
        text-align: left;
        border-bottom: none;
        color: $green-customize;
        font-size: 14px;
      }

      .category-list-count {
        display: none;
      }

      &:nth-child(2n) {
        margin-left: 2%;
      }

      &:nth-child(2n+1) {
        margin-left: 2%;
      }
    }
  }
}

.sidebar-panel.sidebar-panel-friends {
  .friends {
    list-style: none;
    padding-left: 0;
    overflow: hidden;

    .friend {
      width: 50%;
      float: left;
      text-align: left;
      padding-left: 10px;
      height: 40px;
      box-sizing: border-box;

      .logo {
        display: inline-block;

        img {
          width: 20px;
          height: 20px;
        }
      }

      .link {
        text-align: left;
        display: inline-block;
        position: relative;
        top: -5px;

        a {
          border-bottom: none;
          font-size: 14px;
          margin-left: 5px;
          color: $green-customize;
        }
      }
    }
  }
}

.sidebar-toggle {
  display: none;
}

.sidebar-inner {
  border-radius: $border-radius;
  box-shadow: $box-shadow;
  box-sizing: border-box;
  color: var(--text-color);
  width: $sidebar-desktop;
  padding: 0;

  if (hexo-config('motion.enable') && hexo-config('motion.transition.sidebar')) {
    opacity: 0;
  }

  &.affix {
    //position: fixed;
    //top: $sidebar-offset;
  }

  &.affix-bottom {
    //position: absolute;
  }
}

.site-state-item {
  padding: 0 10px;
}

.sidebar-button {
  border-bottom: 1px dotted $grey-light;
  border-top: 1px dotted $grey-light;
  margin-top: 10px;
  text-align: center;

  a {
    border: 0;
    color: $orange;
    display: block;

    &:hover {
      background: none;
      border: 0;
      color: darken($orange, 20%);

      .fa, .fab, .far, .fas {
        color: darken($orange, 20%);
      }
    }
  }
}

.links-of-author {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10px;
  justify-content: center;
}

.links-of-author-item {
  sidebar-inline-links-item();

  if (!hexo-config('social_icons.icons_only')) {
    width: 50%;
  }

  a, span.exturl {
    border-bottom: none;
    display: block;
    text-decoration: none;

    &::before {
      display: none;
    }

    &:hover {
      background: var(--body-bg-color);
      border-radius: 4px;
    }
  }

  .fa, .fab, .far, .fas {
    margin-right: 2px;
  }
}

.links-of-blogroll-item {
  padding: 0;

  if (hexo-config('links_settings.layout') == 'inline') {
    display: inline-block;
    sidebar-inline-links-item();

    if (!hexo-config('social_icons.icons_only')) {
      width: unset;
    }
  }
}

if (hexo-config('back2top.sidebar')) {
  // Only when back2top.sidebar is true, apply the following styles
  .back-to-top {
    background: var(--body-bg-color);
    margin: 8px - $sidebar-offset -10px -18px;

    &.back-to-top-on {
      margin-top: 16px;
    }
  }
}
